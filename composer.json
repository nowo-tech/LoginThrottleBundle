{
    "name": "nowo-tech/login-throttle-bundle",
    "description": "Symfony bundle for login throttling using native Symfony login_throttling feature with pre-configured settings",
    "type": "symfony-bundle",
    "license": "MIT",
    "keywords": [
        "symfony",
        "bundle",
        "security",
        "login",
        "throttling",
        "brute-force",
        "rate-limiting"
    ],
    "homepage": "https://github.com/nowo-tech/login-throttle-bundle",
    "support": {
        "issues": "https://github.com/nowo-tech/login-throttle-bundle/issues",
        "source": "https://github.com/nowo-tech/login-throttle-bundle"
    },
    "authors": [
        {
            "name": "HÃ©ctor Franco Aceituno",
            "email": "hectorfranco@nowo.tech",
            "homepage": "https://github.com/HecFranco",
            "role": "Developer"
        },
        {
            "name": "Nowo.tech",
            "homepage": "https://nowo.tech"
        }
    ],
    "require": {
        "php": ">=8.1 <8.6",
        "symfony/framework-bundle": "^6.0 || ^7.0 || ^8.0",
        "symfony/security-bundle": "^6.0 || ^7.0 || ^8.0",
        "symfony/rate-limiter": "^6.0 || ^7.0 || ^8.0",
        "doctrine/orm": "^2.15 || ^3.0",
        "doctrine/doctrine-bundle": "^2.10 || ^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "symfony/yaml": "^6.0 || ^7.0 || ^8.0"
    },
    "autoload": {
        "psr-4": {
            "Nowo\\LoginThrottleBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nowo\\LoginThrottleBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage --coverage-clover coverage.xml",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "qa": [
            "@cs-check",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "test": "Run PHPUnit tests",
        "test-coverage": "Run PHPUnit tests with code coverage",
        "cs-check": "Check code style with PHP-CS-Fixer",
        "cs-fix": "Fix code style with PHP-CS-Fixer",
        "qa": "Run all quality assurance checks"
    }
}

