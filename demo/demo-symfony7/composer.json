{
    "name": "nowo-tech/login-throttle-demo-symfony7",
    "description": "Demo project for Login Throttle Bundle - Symfony 7.0",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.2,<8.6",
        "doctrine/doctrine-bundle": "^2.10",
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/migrations": "^3.6",
        "doctrine/orm": "^2.15",
        "nowo-tech/login-throttle-bundle": "0.0.3",
        "symfony/console": "^7.4",
        "symfony/dotenv": "^7.4",
        "symfony/flex": "^2.0",
        "symfony/form": "^7.4",
        "symfony/framework-bundle": "^7.4",
        "symfony/runtime": "^7.4",
        "symfony/security-bundle": "^7.4",
        "symfony/translation": "7.*",
        "symfony/twig-bundle": "^7.4",
        "symfony/validator": "^7.4",
        "symfony/yaml": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0",
        "symfony/browser-kit": "7.0.*",
        "symfony/css-selector": "7.0.*"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true,
        "audit": {
            "abandoned": "report"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage --coverage-clover coverage.xml",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "database": [
            "@php bin/console doctrine:database:create --if-not-exists",
            "@php bin/console doctrine:migrations:migrate --no-interaction",
            "@php bin/console doctrine:schema:update --force --complete",
            "@php bin/console doctrine:fixtures:load --no-interaction"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.*"
        }
    }
}
