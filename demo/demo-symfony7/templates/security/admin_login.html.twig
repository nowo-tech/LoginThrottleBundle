{% extends 'base.html.twig' %}

{% block title %}Admin Login - Login Throttle Demo{% endblock %}

{% block styles %}
    {{ parent() }}
    <style>
        .login-container {
            max-width: 500px;
            margin: 50px auto;
        }
        .login-form {
            background: #fff3cd;
            padding: 30px;
            border-radius: 8px;
            border: 2px solid #ffc107;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #495057;
        }
        .form-group input {
            width: 100%;
            padding: 12px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            font-size: 16px;
            box-sizing: border-box;
        }
        .admin-info {
            background: #fff3cd;
            border: 2px solid #ffc107;
            padding: 15px;
            border-radius: 4px;
            margin-top: 20px;
        }
        .admin-info h3 {
            margin-top: 0;
            font-size: 16px;
            color: #856404;
        }
        .config-badge {
            display: inline-block;
            padding: 4px 8px;
            background: #ffc107;
            color: #856404;
            border-radius: 4px;
            font-size: 12px;
            margin: 2px;
            font-weight: bold;
        }
        .warning-badge {
            background: #dc3545;
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-container">
        <h1 style="text-align: center; margin-bottom: 30px;">üîí Admin Panel Login</h1>

        {% if error %}
            <div class="alert alert-danger">
                <div class="alert-title">Authentication Error</div>
                <div class="alert-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% if attempt_info %}
                    <div style="margin-top: 15px; padding-top: 15px; border-top: 1px solid rgba(255,255,255,0.3);">
                        {% if attempt_info.is_blocked %}
                            <p style="margin: 0; font-weight: bold; color: #fff;">
                                ‚ö†Ô∏è {{ 'nowo_login_throttle.error.account_blocked'|trans({'%max_attempts%': attempt_info.max_attempts}, 'nowo_login_throttle') }}
                            </p>
                            {% if attempt_info.retry_after %}
                                <p style="margin: 10px 0 0 0; font-size: 14px;">
                                    {{ 'nowo_login_throttle.error.retry_after'|trans({'%retry_after%': attempt_info.retry_after|date('H:i:s')}, 'nowo_login_throttle') }}
                                </p>
                            {% endif %}
                        {% else %}
                            <p style="margin: 0; font-weight: bold;">
                                üìä {% if attempt_info.tracking_type == 'username' %}
                                    {{ 'nowo_login_throttle.info.attempts_count_by_email'|trans({'%current%': attempt_info.current_attempts, '%max%': attempt_info.max_attempts}, 'nowo_login_throttle') }}
                                {% else %}
                                    {{ 'nowo_login_throttle.info.attempts_count_by_ip'|trans({'%current%': attempt_info.current_attempts, '%max%': attempt_info.max_attempts}, 'nowo_login_throttle') }}
                                {% endif %}
                            </p>
                            {% if attempt_info.remaining_attempts > 0 %}
                                <p style="margin: 10px 0 0 0; font-size: 14px; color: #fff;">
                                    {{ 'nowo_login_throttle.info.remaining_attempts'|trans({'%remaining%': attempt_info.remaining_attempts}, 'nowo_login_throttle') }}
                                </p>
                            {% else %}
                                <p style="margin: 10px 0 0 0; font-size: 14px; color: #fff;">
                                    ‚ö†Ô∏è {{ 'nowo_login_throttle.info.last_attempt_warning'|trans({}, 'nowo_login_throttle') }}
                                </p>
                            {% endif %}
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        {% endif %}

        <div class="admin-info">
            <h3>‚ö†Ô∏è Admin Firewall - Very Strict Configuration:</h3>
            <p><strong>Max Attempts:</strong> <span class="config-badge warning-badge">3</span></p>
            <p><strong>Timeout:</strong> <span class="config-badge warning-badge">30 minutes</span></p>
            <p><strong>Storage:</strong> <span class="config-badge">Database</span></p>
            <p style="margin-top: 10px; font-size: 14px; color: #856404;"><strong>‚ö†Ô∏è Warning:</strong> Admin panel has the strictest throttling. Only 3 attempts allowed with 30 minutes timeout!</p>
        </div>

        <div class="login-form">
            <form method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>

                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>

                <button type="submit" class="btn login-button" style="background: #ffc107; color: #856404; font-weight: bold;">Admin Login</button>
            </form>
        </div>

        <div class="admin-info">
            <h3>üß™ Admin Credentials:</h3>
            <ul>
                <li><strong>admin@example.com</strong> / <code>admin123</code> - <span class="badge badge-success">Admin User Only</span></li>
            </ul>
            <p style="margin: 10px 0 0 0; font-size: 14px; color: #856404;"><strong>üí° Tip:</strong> Admin panel has the strictest throttling. After 3 failed attempts, you'll be blocked for 30 minutes!</p>
        </div>

        <div style="margin-top: 30px; padding: 20px; background: #fff3cd; border-radius: 8px; border: 2px solid #ffc107;">
            <h3 style="margin-top: 0; font-size: 16px; color: #856404;">üîó Test Other Firewalls:</h3>
            <p style="margin-bottom: 15px; font-size: 14px; color: #856404;">This demo includes <strong>3 different firewalls</strong> with independent throttling. Each firewall has its own throttling state:</p>
            <div style="display: flex; gap: 10px; flex-wrap: wrap;">
                <a href="{{ path('login') }}" class="btn" style="flex: 1; min-width: 150px; text-align: center;">
                    üîê Main Login<br>
                    <small style="font-size: 11px;">3 attempts, 10 min</small>
                </a>
                <a href="{{ path('api_login_page') }}" class="btn" style="flex: 1; min-width: 150px; text-align: center;">
                    üîå API Login<br>
                    <small style="font-size: 11px;">5 attempts, 5 min</small>
                </a>
                <a href="{{ path('demo_home') }}" class="btn btn-secondary" style="flex: 1; min-width: 150px; text-align: center;">
                    üè† Home<br>
                    <small style="font-size: 11px;">Overview</small>
                </a>
            </div>
        </div>
    </div>
{% endblock %}

